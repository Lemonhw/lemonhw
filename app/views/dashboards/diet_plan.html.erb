<!-- Diet Plan Card -->
<div class="card secondary-font">
  <% if @day_plans.present? && @day_plans.first&.diet_plan %>
    <h3 class="secondary-font">Diet Plan</h3>
    <%= render 'day_tabs', day_plans: @day_plans, weekly_plan: @weekly_plan, plan_type: :diet_plan %>
  <% else %>
    <p>No diet plans available.</p>
  <% end %>
</div>
