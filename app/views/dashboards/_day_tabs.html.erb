<div class="tab-container" data-controller="dashboard">
  <div class="tabs">
    <% day_plans.each_with_index do |day_plan, i| %>
      <div data-action="click->dashboard#switchTab" data-dashboard-target="tab" data-target-id="<%= day_plan.id %>" class="tab <%= "active" if i == 0 %>">Day <%= i + 1 %></div>
    <% end %>
  </div>
  <div class="content">
    <% day_plans.each_with_index do |day_plan, i| %>
      <div data-dashboard-target="day" data-day-id="<%= day_plan.id %>" class="tab-content <%= "active" if i == 0 %>">
        <!-- Content for Tab 1 -->
          <% i + 1 %>
          <% if plan_type == :exercise_plan %>
            <%= render 'day_plans/exercise_plan', exercise_plan: day_plan.exercise_plan %>
          <% else %>
            <%= render 'day_plans/diet_plan', diet_plan: day_plan.diet_plan %>
          <% end %>
      </div>
    <% end %>
  </div>
</div>
