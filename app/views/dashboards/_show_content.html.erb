<div class="main-content">
  <h1 class="primary-font">Welcome, <%= current_user.name %></h1>
  <% if @profile.weekly_plans.none? %>
    <div class="generate-button">
      <%= link_to 'Please Click HERE to Generate your First Plan', new_weekly_plan_path, class: 'generate-button' %>
    </div>
  <% end %>

  <div class="tab-container" data-controller="dashboard">
    <div class="tabs">
      <div data-action="click->dashboard#switchTab" data-dashboard-target="tab" data-target-id="day1" class="tab active">Day One</div>
      <div data-action="click->dashboard#switchTab" data-dashboard-target="tab" data-target-id="day2" class="tab">Day Two</div>
      <div data-action="click->dashboard#switchTab" data-dashboard-target="tab" data-target-id="day3" class="tab">Day Three</div>
      <div data-action="click->dashboard#switchTab" data-dashboard-target="tab" data-target-id="day4" class="tab">Day Four</div>
      <div data-action="click->dashboard#switchTab" data-dashboard-target="tab" data-target-id="day5" class="tab">Day Five</div>
      <div data-action="click->dashboard#switchTab" data-dashboard-target="tab" data-target-id="day6" class="tab">Day Six</div>
      <div data-action="click->dashboard#switchTab" data-dashboard-target="tab" data-target-id="day7" class="tab">Day Seven</div>


    </div>
    <div class="content">
      <div data-dashboard-target="day" data-day-id="day1" class="tab-content active">
        <!-- Content for Tab 1 -->
        Monday Content
      </div>
      <div data-dashboard-target="day" data-day-id="day2" class="tab-content">
        <!-- Content for Tab 2 -->
        Tuesday content
      </div>
      <div data-dashboard-target="day" data-day-id="day3" class="tab-content">
        <!-- Content for Tab 3 -->
        Wednesday content
      </div>
      <div data-dashboard-target="day" data-day-id="day4" class="tab-content">
        <!-- Content for Tab 3 -->
        Thursday content
      </div>
      <div data-dashboard-target="day" data-day-id="day5" class="tab-content">
        <!-- Content for Tab 3 -->
        Friday content
      </div>
      <div data-dashboard-target="day" data-day-id="day6" class="tab-content">
        <!-- Content for Tab 3 -->
        Saturday content
      </div>
      <div data-dashboard-target="day" data-day-id="day7" class="tab-content">
        <!-- Content for Tab 3 -->
        Sunday content
      </div>
    </div>
  </div>

  <!-- Exercise Plan Card -->
  <div class="card secondary-font">
    <% if @day_plans.present? && @day_plans.first&.exercise_plan %>
      <h3 class="secondary-font">Exercise Plan</h3>
      <%= render 'day_tabs', day_plans: @day_plans, weekly_plan: @weekly_plan, plan_type: :exercise_plan %>
    <% else %>
      <p>No exercise plans available.</p>
    <% end %>
  </div>

  <!-- Diet Plan Card -->
  <div class="card secondary-font">
    <% if @day_plans.present? && @day_plans.first&.diet_plan %>
      <h3 class="secondary-font">Diet Plan</h3>
      <%= render 'day_tabs', day_plans: @day_plans, weekly_plan: @weekly_plan, plan_type: :diet_plan %>
    <% else %>
      <p>No diet plans available.</p>
    <% end %>
  </div>
</div>
