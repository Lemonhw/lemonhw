<!-- show.html.erb -->

<!-- Display user's plans and other content -->
<div class="dashboard-container">
  <%= render 'shared/sidebar' %>
  <div class="main-content">

  <h1>Welcome, <%= current_user.email %></h1>
  <% if @first_day_exercise_plan %>
    <h3>Exercise Plan for the First Day:</h3>
    <iframe width="560" height="315" src="https://www.youtube.com/embed/abcdefg" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>

    <% @first_day_exercise_plan.day_plan_content.each do |key, exercise| %>
      <p><strong><%= key %>:</strong> <%= exercise %></p>
    <% end %>
  <% else %>
    <p>No exercise plan available for the first day.</p>
  <% end %>

<% if @first_day_diet_plan %>
  <h3>Diet Plan for the First Day:</h3>
  <% @first_day_diet_plan.day_plan_content.each do |meal, food_items| %>
    <p><strong><%= meal %>:</strong> <%= food_items %></p>
  <% end %>
<% else %>
  <p>No diet plan available for the first day.</p>
<% end %>
    <!-- Add your existing dashboard content here -->
  </div>
</div>

<!-- Display a button to generate first plans -->
<% if current_user.weekly_plans.none? %>
  <%= link_to 'Generate First Plan', new_weekly_plan_path, class: 'btn btn-primary' %>
<% end %>
