<!-- show.html.erb -->
<h1>Welcome, <%= current_user.email %></h1>

<!-- Display user's plans and other content -->
<h2>Your Weekly Plans</h2>
<% @plans.each do |plan| %>
  <p><%= plan.name %></p>
  <!-- Display any other relevant plan information -->
<% end %>
<% @weekly_plans.each do |weekly_plan| %>
  <p><%= link_to weekly_plan.name, weekly_plan_path(weekly_plan) %></p>
  <!-- Display any other relevant week information -->
<% end %>
<h2>Day Plans</h2>
<% @day_plans.each do |day_plan| %>
  <h3><%= link_to day_plan.day.day_number, weekly_plan_day_plan_path(day_plan.weekly_plan, day_plan) %></h3>
  <!-- Display any other relevant day information -->
<% end %>
<!-- Display a button to generate first plans -->
<%= link_to 'Generate First Plans', new_weekly_plan_path, class: 'btn btn-primary' %>
<%= link_to "Plan History", plan_history_path, class: "btn btn-primary" %>
