<div data-controller="info-dropdown">
  <% if exercise_plan.day_plan_content == "rest" %>
    <div class="rest-day">

      <hr>

      <h1 class="primary-font">REST DAY</h1>

      <hr>

      <%= image_tag("restday.png", alt: "Rest Day") %>
    </div>
  <% else %>
    <% exercise_plan.day_plan_content.keys.each do |exercise_key| %>
      <% if exercise_plan.day_plan_content[exercise_key] %>
        <div class="d-flex">
          <h4><strong><%= exercise_plan.day_plan_content[exercise_key]["name"] %></strong></h4>
          <button class="more-information-btn" data-info-dropdown-target="button" data-action="click->info-dropdown#toggle">Show instructions</button>
        </div>
        <p data-info-dropdown-target="content" class="dropdown-content"><%= exercise_plan.day_plan_content[exercise_key]["instructions"] %></p>
      <% end %>
    <% end %>
  <% end %>
</div>
