<h1>Day Plan for <%= @day_plan.day.strftime("%A, %B %d, %Y") %></h1>

<h2>Meal Plan</h2>
<% @day_plan.meals.each do |meal| %>
  <p><%= meal.name %></p>
  <!-- Display any other relevant meal information -->
<% end %>

<h2>Exercise Plan</h2>
<% @day_plan.exercises.each do |exercise| %>
  <p><%= exercise.name %></p>
  <!-- Display any other relevant exercise information -->
<% end %>

