<p><strong>Full Registration</strong></p>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :surname %>
  <%= f.text_field :surname %>

  <%= f.label :date_of_birth %>
  <%= f.date_field :date_of_birth %>

  <%= f.label :height %>
  <%= f.number_field :height %>

  <%= f.label :gender %>
  <%= f.text_field :gender %>

  <%= f.submit "Go to Dashboard" %>
<% end %>
